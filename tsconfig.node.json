{
  "compilerOptions": {
    // Permite que TS aceite arquivos .js e .jsx
    "allowJs": true,
    // Se quiser que o TS "tente" apontar erros de tipo em arquivos JS, habilite:
    // "checkJs": true,
    // Exige modo JSX:
    "jsx": "react-jsx", // ou "react" se estiver usando React < 17,
    "noEmit": true,
    "module": "ESNext",
    "target": "ES2022",
    "moduleResolution": "bundler", // ou "node", se preferir
    "strict": true,
  },
  "include": ["src/**/*", "vite.config.js"],
  "exclude": ["node_modules"]
}
